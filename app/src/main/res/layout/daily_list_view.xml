<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="2dp"
    android:background="#A4ABBD"
    >

    <RelativeLayout
        android:id="@+id/daily_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/daily_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="28"
            android:layout_marginLeft="1dp"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/daily_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/daily_day"
            android:layout_toRightOf="@+id/daily_day"
            android:text="2020.07"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/daily_day_name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/daily_day"
            android:text="Wed"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:textSize="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/expense_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="Brunch with me"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/spend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_day_name"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:layout_marginTop="13dp"
            android:text="Spent" />

        <TextView
            android:id="@+id/spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spend_text"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:text="Ksh. 300"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expense_desc"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:textSize="13dp"
            android:layout_marginRight="60dp"
            android:text="Left" />

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_text"
            android:layout_alignParentRight="true"
            android:textSize="11dp"
            android:textColor="#00ff00"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="41dp"
            android:layout_marginTop="5dp"
            android:text="Ksh. 200" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>